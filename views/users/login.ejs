<% layout('layouts/boilerplate') %>
<div class="row">
  <div class="d-flex justify-content-center align-items-center" id="signinForm">
    <div class="card shadow" id="signinCard">
      <div class="card-body">
        <div class="d-flex justify-content-center">
          <h5 class="card-title">Login</h5>
        </div>
        <form action="/login" method="POST" class="validated-form" novalidate>
          <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input
              class="form-control"
              type="text"
              id="username"
              name="username"
              required
              autofocus
            />
            <div class="invalid-feedback">
              Username must be at least 4 characters
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <div class="input-group">
              <input
                class="form-control password"
                type="password"
                minlength="6"
                maxlength="20"
                name="password"
                required
              />
              <span class="input-group-text eyeIcon"
                ><i class="bi bi-eye-slash-fill" id=""></i
              ></span>
              <div class="invalid-feedback" id="passwordHelp">
                Password must be 6-20 characters
              </div>
            </div>
          </div>
          <button class="btn btn-success w-100 mt-3" id="submit-btn">
            Login
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="/js/showHidePassword.js"></script>
